CompileFlags:
  Add:
    - --target=mips64r5900el-ps2-elf
    - --gcc-toolchain=/usr/local/ps2dev/ee
    - -isystem
    - /usr/local/ps2dev/ee/lib/gcc/mips64r5900el-ps2-elf/15.1.0/../../../../mips64r5900el-ps2-elf/include/c++/15.1.0
    - -isystem
    - /usr/local/ps2dev/ee/lib/gcc/mips64r5900el-ps2-elf/15.1.0/../../../../mips64r5900el-ps2-elf/include/c++/15.1.0/mips64r5900el-ps2-elf
    - -isystem
    - /usr/local/ps2dev/ee/lib/gcc/mips64r5900el-ps2-elf/15.1.0/../../../../mips64r5900el-ps2-elf/include/c++/15.1.0/backward
    - -isystem
    - /usr/local/ps2dev/ee/lib/gcc/mips64r5900el-ps2-elf/15.1.0/include
    - -isystem
    - /usr/local/ps2dev/ee/lib/gcc/mips64r5900el-ps2-elf/15.1.0/include-fixed
    - -isystem
    - /usr/local/ps2dev/ee/lib/gcc/mips64r5900el-ps2-elf/15.1.0/../../../../mips64r5900el-ps2-elf/include

# Sensible default when a file isn't in compile_commands.json
FallbackFlags: ['-std=gnu99']

---
# Treat normal .c files as C99
If:
  PathMatch: [".*\\.c$"]
CompileFlags:
  Add: ['-std=gnu99']

---
# These .c files are actually compiled with g++ (from your CCDB)
If:
  PathMatch: [".*/raylib/src/(rcore|rshapes|rtextures|rtext|utils|rmodels|raudio)\\.c$"]
CompileFlags:
  Add: ['-xc++','-std=gnu++17','-fpermissive']

---
# PS2 platform layer is also C++ (it includes ps2gl C++ headers)
If:
  PathMatch: [".*/raylib/src/platforms/rcore_playstation2\\.c$"]
CompileFlags:
  Add: ['-xc++','-std=gnu++17','-fpermissive']

---
# Normal C++ sources
If:
  PathMatch: [".*\\.(cc|cpp|cxx|C|CPP)$"]
CompileFlags:
  Add: ['-std=gnu++17']
